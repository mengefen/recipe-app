<% @recipes.each do |recipe| %>
  <div class="recipe-card d-flex flex-row justify-content-center gap-lg-5">
    <div class="recipe-btn-title w-30 flex-grow-0">
      <h3 class="recipe-name"><%= recipe.name %> </h3>
      <% if can? :manage, recipe %>
        <%= button_to "REMOVE",
          user_recipe_path(user_id: recipe.user_id, id: recipe),  method: :delete,
          data: { confirm: "Are you sure?" },id: recipe.id,
          class: "btn-link-custom" %>
      <% end %>
    </div>
    <div class="recipe-desc-holder ps-lg-5 ms-lg-5 d-flex flex-column align-items-end ">
      <p class="recipe-description"><%= recipe.description %></p>
      <% if can? :manage, recipe %>
        <%= link_to "See details", user_recipe_path(user_id: recipe.user_id, id: recipe.id), class:"btn-link-custom" %>
      <% elsif public? recipe %>
        <%= link_to "See details", user_recipe_path(user_id: recipe.user_id, id: recipe.id), class:"btn-link-custom" %>
      <% end %>
    </div>
  </div>
<% end %>